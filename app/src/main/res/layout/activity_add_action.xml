<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_confirm">


        </include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/input_action_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textCapSentences"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/action_day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_action_name"
                android:text="@string/day"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_action_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ui83"/>

            <Button
                android:id="@+id/action_date_start_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_day_view"
                android:layout_marginLeft="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:text="Button"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:translationZ="0dp" />

            <Button
                android:id="@+id/action_time_start_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_day_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:text="Button"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:translationZ="0dp" />

            <Button
                android:id="@+id/action_date_stop_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_date_start_btn"
                android:layout_marginLeft="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:text="Button"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:translationZ="0dp" />

            <Button
                android:id="@+id/action_time_stop_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_date_start_btn"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:text="Button"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:translationZ="0dp" />

            <TextView
                android:id="@+id/action_color_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_date_stop_btn"
                android:text="@string/color"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/color_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/AppTheme.Button"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/action_date_stop_btn"
                android:background="@drawable/btn_round"
                android:backgroundTint="@color/pie0"
                />

            <Button
                android:id="@+id/action_select_color_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_below="@id/action_color_view"
                style="@style/AppTheme.Button"
                android:text="@string/select_color"/>

            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_select_color_button"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ui83"/>

            <TextView
                android:id="@+id/action_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_select_color_button"
                android:text="@string/icon"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/action_select_icon_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_below="@id/action_image_view"
                style="@style/AppTheme.Button"
                android:text="@string/select_icon"/>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>