<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:outlineProvider="bounds"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_item_background">

            <ImageView
                android:id="@+id/task_list_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ui96"
                android:backgroundTintMode="screen"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"

                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/task_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:text="Nazwa celu"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/task_repeat_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/grid15"
                android:layout_marginBottom="5dp"

                />

            <ImageView
                android:id="@+id/task_priority_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/task_repeat_icon"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/priority1"

                />

            <TextView
                android:id="@+id/task_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:paddingRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/task_list_text"
                android:layout_marginTop="5dp"
                android:background="@color/black">

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>