<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.eagledev.planner.AddGoalActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar_confirm"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/goals_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="text"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:id="@+id/goals_day_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_name"
            android:text="@string/day"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_name"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ui83"/>

        <Button
            android:id="@+id/goals_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_day_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:elevation="0dp"
            android:text="Button"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:translationZ="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_date_button"
            android:layout_alignParentLeft="true"
            android:src="@drawable/grid18"/>

        <TextView
            android:id="@+id/goals_repeat_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_date_button"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:text="Powtarzanie" />

        <Spinner
            android:id="@+id/goals_repaeat_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_repeat_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            />

        <RelativeLayout
            android:id="@+id/goals_repeat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_repaeat_spinner"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:id="@+id/goals_days_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/goals_mo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_we"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_th"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_sa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />

                <ImageView
                    android:id="@+id/goals_su"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/others17" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goals_other_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powtarzaj co" />

                <EditText
                    android:id="@+id/goals_amout_edittext"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/goal_time_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>


            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_repeat_layout"
            android:layout_alignParentLeft="true"
            android:src="@drawable/finance45"/>

        <TextView
            android:id="@+id/goals_priority_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_repeat_layout"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:text="Priorytet" />

        <LinearLayout
            android:id="@+id/goals_priority_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/goals_priority_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/others17"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/others17"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/others17"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/others17"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_priority_layout"
            android:layout_alignParentLeft="true"
            android:src="@drawable/finance34"/>

        <TextView
            android:id="@+id/goals_comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals_priority_layout"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:text="Komentarz" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/goals_comment_view"

            android:maxLength="250"
            />


    </RelativeLayout>


</LinearLayout>
