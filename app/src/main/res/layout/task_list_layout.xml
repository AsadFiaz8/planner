<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:background="@drawable/task_box"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/task_list_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:backgroundTintMode="screen"

                    android:layout_centerVertical="true"
                    android:src="@drawable/task_check_off" />

                <TextView
                    android:id="@+id/task_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/task_list_button"
                    android:layout_marginLeft="13dp"
                    android:text="Nazwa celu"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/task_repeat_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/grid15"

                    />

                <ImageView
                    android:id="@+id/task_priority_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/task_repeat_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/priority1"

                    />

                <TextView
                    android:id="@+id/task_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/priority_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/priority_dot"
                    />

            </RelativeLayout>




        </RelativeLayout>

</RelativeLayout>