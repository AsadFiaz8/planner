<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:background="@drawable/box_activity">


        <RelativeLayout
            android:id="@+id/routines_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/routines_color_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                app:srcCompat="@drawable/activity_color_icon"/>

            <ImageView
                android:id="@+id/routines_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                 />

            <TextView
                android:id="@+id/routine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa rutyny"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/routines_color_image_view"
                android:layout_alignParentBottom="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/item_list"
                android:layout_marginBottom="2dp"
                style="@style/Planner.RegularText"/>

            <TextView
                android:id="@+id/routine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/routine_name"
                android:layout_toRightOf="@id/routines_color_image_view"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="10:00 - 18:00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/item_list"
                style="@style/Planner.RegularText"/>

            <TextView
                android:id="@+id/routine_loops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="*****--"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                style="@style/Planner.RegularText"/>




        </RelativeLayout>

</RelativeLayout>