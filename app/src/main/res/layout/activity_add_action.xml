<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_confirm">


        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="top|center"
            android:orientation="vertical"
            tools:paddingLeft="40dp"
            tools:paddingRight="40dp"
            tools:paddingTop="10dp">


            <EditText
                android:id="@+id/input_action_name"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="text" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageButton
                    android:id="@+id/btn_date_left"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/button_height"
                    android:src="@drawable/common060"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    style="@style/AppTheme.Button"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_alignParentLeft="true"
                    android:elevation="0dp"
                    android:translationZ="0dp"
                    android:tint="@color/white"/>

                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="170dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    style="@style/AppTheme.Button"
                    android:backgroundTint="@color/colorAccent"
                    android:elevation="5dp"
                    android:translationZ="5dp"/>

                <ImageButton
                    android:id="@+id/btn_date_right"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/button_height"
                    android:src="@drawable/common06"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    style="@style/AppTheme.Button"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:translationZ="0dp"
                    android:elevation="0dp"
                    android:tint="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/date_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/input_action_date_start"
                        style="@style/AppTheme.Button"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/start_hour" />

                    <Button
                        android:id="@+id/input_action_date_stop"
                        style="@style/AppTheme.Button"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/stop_hour" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/date_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/start_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_hour"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/stop_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stop_hour"
                        android:layout_alignParentRight="true"/>

                    <NumberPicker
                        android:id="@+id/start_hour_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@id/start_time_text"
                        android:layout_marginTop="20dp">
                    </NumberPicker>
                    <NumberPicker
                        android:id="@+id/start_minute_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/start_hour_picker"
                        android:layout_alignTop="@id/start_hour_picker"
                        android:layout_marginLeft="5dp">
                    </NumberPicker>

                    <NumberPicker
                        android:id="@+id/stop_hour_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/stop_minute_picker"
                        android:layout_marginRight="5dp"
                        android:layout_alignTop="@id/start_hour_picker"
                        >
                    </NumberPicker>
                    <NumberPicker
                        android:id="@+id/stop_minute_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@id/start_hour_picker">
                    </NumberPicker>
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_view"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/button_height"
                    style="@style/AppTheme.Button"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/city18"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    />

                <Button
                    android:id="@+id/btn_select_icon"
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/select_icon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/color_view"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/button_height"
                    style="@style/AppTheme.Button"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:background="@color/pie0"
                    />

                <Button
                    android:id="@+id/btn_select_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    style="@style/AppTheme.Button"
                    android:text="@string/select_color"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>