<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.eagledev.planner.BuyPremiumActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <include layout="@layout/toolbar_confirm">

    </include>

    <TextView
        android:id="@+id/text_premium_reason"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/text_premium_features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="
Korzyści konta Premium:\n
Nieograniczona ilość rutyn oraz czynności\n
60 dodatkowych ikon dla rutyn i czynności\n
42 dodatkowe kolory\n
Brak dziennego limitu celów


"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz plan premium!"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Plan miesięczny" />

    <Button
        android:id="@+id/btn_premium_month"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Button"
        android:backgroundTint="@color/colorAccent"
        android:text="3zł / miesiąc"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Plan roczny" />

    <Button
        android:id="@+id/btn_premium_year"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Button"
        android:backgroundTint="@color/colorAccent"
        android:text="2 zł / miesiąc" />

    <TextView
        android:layout_width="243dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="Darmowe konto premium w zamian za oglądanie reklam" />

    <Button
        android:id="@+id/btn_premium_watch_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Button"
        android:backgroundTint="@color/colorAccent"
        android:text="Obejrzyj reklamę" />




</LinearLayout>
