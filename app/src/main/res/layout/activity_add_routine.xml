<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background"
    tools:context=".Activity.AddRoutine"
    android:theme="@style/AppTheme">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_confirm"></include>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textCapSentences"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_routine_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/tech25"/>

            <TextView
                android:id="@+id/action_day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_routine_name"
                android:text="@string/time"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/routine_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_day_view"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/input_routine_start"
                    android:layout_width="130dp"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/start_hour"
                    style="@style/AppTheme.Button"
                   />

                <Button
                    android:id="@+id/input_routine_stop"
                    android:layout_width="130dp"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/stop_hour"
                    style="@style/AppTheme.Button"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/routine_repeat_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/routine_time_layout"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"
                android:text="@string/repeat" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/routine_time_layout"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grid18"/>

            <RelativeLayout
                android:id="@+id/routine_repeat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/routine_repeat_view"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:id="@+id/routine_days_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/routine_mo"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:background="@drawable/task_round_button"
                        android:text="@string/mo"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>



                    <TextView
                        android:id="@+id/routine_tu"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/tu"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>

                    <TextView
                        android:id="@+id/routine_we"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/we"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>

                    <TextView
                        android:id="@+id/routine_th"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/th"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>

                    <TextView
                        android:id="@+id/routine_fr"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/fr"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>

                    <TextView
                        android:id="@+id/routine_sa"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/sa"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/task_days_margin"/>

                    <TextView
                        android:id="@+id/routine_su"
                        android:layout_width="@dimen/task_days_button"
                        android:layout_height="@dimen/task_days_button"
                        android:src="@drawable/others17"
                        android:background="@drawable/task_round_button"
                        android:text="@string/su"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/routine_repeat_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/action_color_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color"
                        />

                    <ImageView
                        android:id="@+id/color_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        style="@style/AppTheme.Button"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_round"
                        android:backgroundTint="@color/pie0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    >

                    <TextView
                        android:id="@+id/action_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon"
                        />

                    <ImageView
                        android:id="@+id/icon_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/city18"
                        android:background="@drawable/btn_round"
                        android:backgroundTint="@color/action_fragment_day_line"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>